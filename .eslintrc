{
  "extends": [
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "flowtype"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "arrow-parens": "warn",
    "comma-dangle": ["warn", "always-multiline"],
    "no-debugger": "warn",
    "no-unused-vars": "warn",
    "quotes": ["warn", "single"],
    "semi": "warn",
    "space-before-function-paren": ["warn", "never"]
  }
}
